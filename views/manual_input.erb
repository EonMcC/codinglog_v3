<body>

  <div class="menu-bar">
    <form action="/" method="get">
      <button class="menu" type="submit">Home</button>
    </form>
    <form action="/show_times/" method="post">
      <button class="menu" type="submit">Show Times</button>
    </form>
    <form action="/manual_input/" method="get">
      <button class="menu" type="submit">Manual Input</button>
    </form>
  </div>

<div class="container">

<% for language in @languages %>
<div class="button-manual" style="order: <%= language.id %>;">
<form action="/manual_input/" method="post">
  <%= language.name %>
  <br>
  <br>

  <input type="hidden" name="id" value="<%= language.id %>">
  <input type="hidden" name="name" value="<%= language.name %>">
  <label for="time"></label>
  <input type="number" name="time" value="" placeholder="Enter in minutes">
  <br>

  <input type="submit" name="submit" value="Submit Time">
</form>
</div>
<% end %>



</div>

</body>
